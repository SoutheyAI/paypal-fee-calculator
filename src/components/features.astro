---
// @ts-ignore
import { Icon } from '@iconify/react';
import { Picture } from "astro:assets";
import heroImage from "../assets/hero.png";
import calculatorOverview from "../assets/calculator-overview.png";
import platformComparison from "../assets/platform-comparison.png";
import calculationSteps from "../assets/calculation-steps.png";
import understandingFees from "../assets/features/understanding-fees.png";
import compareFees from "../assets/features/compare-fees.png";
import calculateFees from "../assets/features/calculate-fees.png";
import feeOverview from "../assets/features/fee-overview.png";

const features = [
  {
    title: "PayPal Fees",
    description:
      "Calculate PayPal transaction fees, including domestic and international rates, for different payment types.",
    icon: "simple-icons:paypal",
  },
  {
    title: "Amazon Fees",
    description:
      "Estimate Amazon seller fees, including referral fees, FBA fees, and storage fees for your products.",
    icon: "simple-icons:amazon",
  },
  {
    title: "eBay Fees",
    description:
      "Calculate eBay final value fees, insertion fees, and optional feature fees for your listings.",
    icon: "simple-icons:ebay",
  },
  {
    title: "Multi-Currency Support",
    description:
      "Support for multiple currencies with real-time exchange rates for accurate international fee calculations.",
    icon: "fluent:money-24-regular",
  },
  {
    title: "Fee Comparison",
    description:
      "Compare fees across different platforms to make informed decisions about where to sell your products.",
    icon: "fluent:data-trending-24-regular",
  },
  {
    title: "Profit Calculator",
    description:
      "Calculate your net profit after all platform fees, shipping costs, and other expenses.",
    icon: "fluent:calculator-24-regular",
  },
];

---

<div class="py-8 px-4 sm:px-6 lg:px-8 mx-auto max-w-7xl">
  <div class="my-4 flex flex-col gap-8">
    <!-- What is Astroship -->
    <div class="my-4 md:my-16 grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-24 items-center">
      <div class="order-1 md:order-1">
        <Picture
          src={understandingFees}
          alt="Understanding Platform Fees"
          class="w-full max-w-md rounded-xl shadow-xl ring-1 ring-gray-400/10"
          widths={[200, 400, 600]}
          sizes="(max-width: 800px) 100vw, 620px"
          loading="eager"
          format="avif"
        />
      </div>
      <div class="order-2 md:order-2">
        <h2 class="text-3xl font-bold tracking-tight text-primary sm:text-4xl">
          Understanding Platform Fees
        </h2>
        <p class="mt-6 text-lg leading-8 text-muted-foreground">
          Our comprehensive calculator helps you understand and optimize your e-commerce fees across multiple platforms, making your business more profitable.
        </p>
        <div class="mt-4">
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Real-time Calculations</p>
              <p class="text-md text-muted-foreground">Always up-to-date with the latest platform fee structures</p>
            </div>
          </div>
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Multi-Platform Support</p>
              <p class="text-md text-muted-foreground">Calculate fees for PayPal, Amazon, eBay and more</p>
            </div>
          </div>
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Profit Insights</p>
              <p class="text-md text-muted-foreground">Get detailed breakdowns of all fees and profit margins</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Why Choose Astroship -->
    <div class="my-4 md:my-16 grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-24 items-center">
      <div class="order-2 md:order-1">
        <h2 class="text-3xl font-bold tracking-tight text-primary sm:text-4xl">
          Compare Platform Fees
        </h2>
        <p class="mt-6 text-lg leading-8 text-muted-foreground">
          Make informed decisions by comparing fees across different e-commerce platforms and understanding their impact on your business.
        </p>
        <div class="mt-4">
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Compare Platform Fees</p>
              <p class="text-md text-muted-foreground">Make informed decisions by comparing fees across different e-commerce platforms and understanding their impact on your business.</p>
            </div>
          </div>
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Side-by-Side Comparison</p>
              <p class="text-md text-muted-foreground">Compare fees and rates across multiple platforms simultaneously</p>
            </div>
          </div>
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Detailed Breakdowns</p>
              <p class="text-md text-muted-foreground">See all fee components and how they affect your bottom line</p>
            </div>
          </div>
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Smart Recommendations</p>
              <p class="text-md text-muted-foreground">Get insights on which platform might be best for your business</p>
            </div>
          </div>
        </div>
      </div>
      <div class="order-1 md:order-2">
        <Picture
          src={compareFees}
          alt="Platform Fee Comparison"
          class="w-full max-w-md rounded-xl shadow-xl ring-1 ring-gray-400/10"
          widths={[200, 400, 600]}
          sizes="(max-width: 800px) 100vw, 620px"
          loading="eager"
          format="avif"
        />
      </div>
    </div>

    <!-- How to Create a Landing Page -->
    <div class="my-4 md:my-16 grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-24 items-center">
      <div class="order-1 md:order-1">
        <Picture
          src={calculateFees}
          alt="How to Calculate Fees"
          class="w-full max-w-md rounded-xl shadow-xl ring-1 ring-gray-400/10"
          widths={[200, 400, 600]}
          sizes="(max-width: 800px) 100vw, 620px"
          loading="eager"
          format="avif"
        />
      </div>
      <div class="order-2 md:order-2">
        <h2 class="text-3xl font-bold tracking-tight text-primary sm:text-4xl">
          How to Calculate Your Fees
        </h2>
        <p class="mt-6 text-lg leading-8 text-muted-foreground">
          Calculate your e-commerce fees accurately in three simple steps. Our calculator makes it easy to understand and optimize your platform costs.
        </p>
        <div class="mt-4">
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Enter Transaction Details</p>
              <p class="text-md text-muted-foreground">Input your sale amount and platform settings</p>
            </div>
          </div>
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Review Fee Breakdown</p>
              <p class="text-md text-muted-foreground">See detailed analysis of all applicable fees</p>
            </div>
          </div>
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Get Results</p>
              <p class="text-md text-muted-foreground">Receive your final costs and profit calculations</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Platform Fee Calculators -->
    <div class="my-4 md:my-16 grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-24 items-center">
      <div class="order-1 md:order-1">
        <h2 class="text-3xl font-bold tracking-tight text-primary sm:text-4xl">
          Comprehensive Fee Calculations
        </h2>
        <p class="mt-6 text-lg leading-8 text-muted-foreground">
          Our calculator helps you understand and optimize your e-commerce costs across multiple platforms.
        </p>
        <div class="mt-4">
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Real-time Updates</p>
              <p class="text-md text-muted-foreground">Always up-to-date with the latest platform fee structures</p>
            </div>
          </div>
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Multiple Platforms</p>
              <p class="text-md text-muted-foreground">Support for PayPal, Amazon, eBay, and more</p>
            </div>
          </div>
          <div class="grid grid-cols-[25px_1fr] items-start pb-4 last:mb-0 last:pb-0">
            <span class="flex h-2 w-2 translate-y-1 rounded-full bg-sky-500"></span>
            <div class="space-y-1">
              <p class="text-md font-medium leading-none">Profit Optimization</p>
              <p class="text-md text-muted-foreground">Make informed decisions to maximize your earnings</p>
            </div>
          </div>
        </div>
      </div>
      <div class="order-2 md:order-2">
        <Picture
          src={feeOverview}
          alt="Comprehensive Fee Calculations"
          class="w-full max-w-md rounded-xl shadow-xl ring-1 ring-gray-400/10"
          widths={[200, 400, 600]}
          sizes="(max-width: 800px) 100vw, 620px"
          loading="eager"
          format="avif"
        />
      </div>
    </div>

    <!-- Features Title -->
    <div class="text-center max-w-3xl mx-auto mt-16">
      <h2 class="text-3xl font-bold tracking-tight text-primary sm:text-4xl">
        Everything you need to start a website
      </h2>
      <p class="mt-6 text-lg leading-8 text-muted-foreground">
        Astro comes batteries included. It takes the best parts of state-of-the-art tools and adds its own innovations.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
      {
        features.map((item) => (
          <div class="flex gap-4 items-start">
            <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0 dark:bg-white">
              <Icon client:load icon={item.icon} className="text-white dark:text-black" />
            </div>
            <div>
              <h3 class="font-semibold text-lg dark:text-white">{item.title}</h3>
              <p class="text-slate-500 mt-2 leading-relaxed dark:text-slate-400">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
