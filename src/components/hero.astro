---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
import { Icon } from '@iconify/react';

---

<div class="overflow-x-clip">
  <Container>
    <main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
      <div class="py-6 md:order-1 hidden md:block">
        <Picture
          src={heroImage}
          alt="Fee Calculator Hero Image"
          widths={[200, 400, 600]}
          sizes="(max-width: 800px) 100vw, 620px"
          loading="eager"
          format="avif"
        />
      </div>
      <div>
        <h1
          class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter dark:text-white">
          E-commerce Fee Calculator
        </h1>
        <p class="text-lg mt-4 text-slate-600 max-w-xl dark:text-slate-300">
          Calculate fees for multiple platforms including PayPal, Amazon, eBay, and more. 
          Save money by understanding transaction costs across different e-commerce platforms.
        </p>
        <div class="mt-6 flex flex-col sm:flex-row gap-3">
          <Link
            href="/calculator/paypal"
            class="flex gap-1 items-center justify-center"
            rel="noopener">
            <Icon client:load icon="simple-icons:paypal" className="text-white w-5 h-5" />
            PayPal Calculator
          </Link>
          <Link
            href="/calculator/amazon"
            class="flex gap-1 items-center justify-center"
            style="outline"
            rel="noopener">
            <Icon client:load icon="simple-icons:amazon" className="w-4 h-4" />
            Amazon Calculator
          </Link>
        </div>
      </div>
    </main>
  </Container>
</div>
