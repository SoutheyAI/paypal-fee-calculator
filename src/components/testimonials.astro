<div class="py-16 sm:py-24 bg-slate-50">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-xl text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        What Users Say About Astroship
      </h2>
      <p class="mt-4 text-lg leading-8 text-gray-600">
        Hear from our satisfied users who have transformed their website development process.
      </p>
    </div>
    <div class="mx-auto mt-16 flow-root max-w-2xl sm:mt-20 lg:mx-0 lg:max-w-none">
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {testimonials.map((item) => (
          <div class="relative rounded-2xl bg-white p-8 shadow-lg ring-1 ring-gray-900/5 transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
            <div class="flex items-center gap-x-4">
              <img src={item.avatar} alt={item.author} class="h-14 w-14 rounded-full bg-gray-50" />
              <div>
                <div class="text-base font-semibold leading-6 text-gray-900">{item.author}</div>
                <div class="text-sm leading-6 text-gray-600">{item.title}</div>
              </div>
            </div>
            <blockquote class="mt-6">
              <p class="text-base leading-7 text-gray-600">{item.quote}</p>
            </blockquote>
          </div>
        ))}
      </div>
    </div>
  </div>
